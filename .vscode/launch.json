    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Petit-ami application",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "args": [""],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // PA uses SIGUSR1 to resolve pselect() issue. This ignores it in
            // gdb, otherwise it will stop on normal runs.
            "miDebuggerArgs": "-ex \"handle SIGUSR1 nostop noprint\""
        },
        {
            "name": "Run Petit-ami application, stop at entry",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "args": [""],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // PA uses SIGUSR1 to resolve pselect() issue. This ignores it in
            // gdb, otherwise it will stop on normal runs.
            "miDebuggerArgs": "-ex \"handle SIGUSR1 nostop noprint\""
        },
    ]
}